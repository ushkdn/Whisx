{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq", "Serilog.Sinks.PostgreSQL" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[Time: {Timestamp:HH:mm:ss}, Type: {Level:u}, Context: {SourceContext}]{NewLine}Message: {Message:lj}{NewLine}{Exception}{NewLine}",
          "shared": true
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Whisx.User.API.Logs-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true,
          "outputTemplate": "[Time: {Timestamp:HH:mm:ss}, Type: {Level:u}, Context: {SourceContext}]{NewLine}Message: {Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5437"
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=localhost;Username=user;Password=password;Database=whisx.logs.db",
          "tableName": "logs",
          "needAutoCreateTable": true,
          "columnOptionsSection": {
            "message": {
              "ColumnName": "message",
              "DataType": "Text"
            },
            "level": {
              "ColumnName": "level",
              "DataType": "Varchar",
              "DataLength": 128
            },
            "time_stamp": {
              "ColumnName": "time_stamp",
              "DataType": "Timestamp"
            },
            "exception": {
              "ColumnName": "exception",
              "DataType": "Text",
              "AllowNull": true
            },
            "properties": {
              "ColumnName": "properties",
              "DataType": "Jsonb",
              "AllowNull": true
            }
          }
        }
      }
    ]
  }
}